<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ProfileFragment" android:id="@+id/frameLayout3">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:text="Povezana denarnica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:textColor="@android:color/black" android:textSize="18sp"/>
    <ImageView
            android:src="@drawable/ic_credit_card_black_32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:tint="@android:color/black"/>
    <TextView
            android:text="Ime vaše ARK denarnice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/wallet_name" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView" app:layout_constraintTop_toTopOf="@+id/imageView"
            android:textSize="16sp" android:textColor="#000000"
    />
    <ImageButton
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/edit_wallet" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView" app:layout_constraintTop_toTopOf="@+id/textView"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    <TextView
            android:text="Stanje vaše denarnice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wallet_balance"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:textColor="@android:color/black"/>
    <ImageView
            android:src="@drawable/ic_monetization_on_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
</androidx.constraintlayout.widget.ConstraintLayout>