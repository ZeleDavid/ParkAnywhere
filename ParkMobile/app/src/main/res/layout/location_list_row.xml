            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/location_list_adress"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location_list_text"
            app:layout_constraintEnd_toStartOf="@+id/location_list_spots" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_list_spots"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/textView11"
            android:layout_marginEnd="4dp" android:textSize="24dp" android:textColor="@android:color/black"/>
    <TextView
            android:text="prostih\nmest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/location_list_spots" android:textSize="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>